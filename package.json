{
  "name": "okite-ai",
  "version": "1.0.0",
  "description": "AIと共に作る掟プロジェクト",
  "scripts": {
    "lint:md": "npx markdownlint \"docs/**/*.md\"",
    "fix:md": "npx markdownlint --fix \"docs/**/*.md\"",
    "check:md:links": "./scripts/check-md-links.js",
    "check:md:frontmatter": "node ./scripts/check-md-frontmatter.js",
    "check:md:structure": "node ./scripts/check-md-structure.js",
    "check:md:single": "node ./scripts/check-single-file.js",
    "generate:rule-id": "node ./scripts/generate-rule-id.js",
    "fix:filenames": "node ./scripts/fix-filenames.js",
    "fix:frontmatter:order": "node ./scripts/fix-frontmatter-order.js",
    "fix:frontmatter:ulid": "node ./scripts/fix-frontmatter-ulid.js",
    "fix:frontmatter": "node ./scripts/fix-frontmatter.js",
    "fix:rule-ids": "node ./scripts/fix-rule-ids.js",
    "fix:text-style": "node ./scripts/fix-text-style.js",
    "lint:text": "textlint \"docs/**/*.md\"",
    "fix:text": "textlint --fix \"docs/**/*.md\"",
    "fix:all": "npm run fix:md && npm run fix:text && npm run fix:frontmatter:order && npm run fix:rule-ids && npm run fix:filenames",
    "lint:all": "npm run lint:md && npm run check:md:links && npm run check:md:frontmatter && npm run check:md:structure && npm run lint:text",
    "tsc:check": "tsc --noEmit",
    "ts-fix-md-links": "npx ts-node scripts/fix-md-links.ts",
    "ts-check-md-links": "npx ts-node scripts/check-md-links.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "gray-matter": "^4.0.3",
    "markdownlint": "^0.37.4",
    "markdownlint-cli": "^0.39.0",
    "textlint": "^13.4.1",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.1.0",
    "textlint-rule-ja-no-mixed-period": "^2.1.1",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-no-weak-phrase": "^2.0.0",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-preset-ja-technical-writing": "^9.0.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "ulidx": "^2.4.1"
  }
}
