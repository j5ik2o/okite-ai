{
  "name": "okite-ai",
  "version": "1.0.0",
  "description": "AIと共に作る掟プロジェクト",
  "scripts": {
    "lint:md": "npx markdownlint \"docs/**/*.md\"",
    "fix:md": "npx markdownlint --fix \"docs/**/*.md\"",
    "check:md:links": "./scripts/check-md-links.sh",
    "check:md:frontmatter": "./scripts/check-md-frontmatter.sh",
    "check:md:structure": "./scripts/check-md-structure.sh",
    "lint:text": "textlint \"docs/**/*.md\"",
    "fix:text": "textlint --fix \"docs/**/*.md\"",
    "fix:all": "npm run fix:md && npm run fix:text",
    "lint:all": "npm run lint:md && npm run check:md:links && npm run check:md:frontmatter && npm run check:md:structure && npm run lint:text"
  },
  "devDependencies": {
    "markdownlint": "^0.37.4",
    "markdownlint-cli": "^0.39.0",
    "textlint": "^13.4.1",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.1.0",
    "textlint-rule-ja-no-mixed-period": "^2.1.1",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-no-weak-phrase": "^2.0.0",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-preset-ja-technical-writing": "^9.0.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "ulid": "^2.3.0"
  }
}
