{
  "name": "okite-ai",
  "version": "1.0.0",
  "description": "AIと共に作る掟プロジェクト",
  "scripts": {
    "build": "tsc --noEmitOnError false",
    "lint:md": "npx markdownlint \"docs/**/*.md\"",
    "fix:md": "npx markdownlint --fix \"docs/**/*.md\"",
    "check:md:links": "node ./dist/scripts/check-md-links.js",
    "check:md:frontmatter": "node ./dist/scripts/check-md-frontmatter.js",
    "check:md:structure": "node ./dist/scripts/check-md-structure.js",
    "check:md:single": "node ./dist/scripts/check-single-file.js",
    "generate:rule-id": "node ./dist/scripts/generate-rule-id.js",
    "fix:filenames": "node ./dist/scripts/fix-filenames.js",
    "fix:frontmatter:order": "node ./dist/scripts/fix-frontmatter-order.js",
    "fix:frontmatter:ulid": "node ./dist/scripts/fix-frontmatter-ulid.js",
    "fix:frontmatter": "node ./dist/scripts/fix-frontmatter.js",
    "fix:rule-ids": "node ./dist/scripts/fix-rule-ids.js",
    "lint:text": "textlint \"docs/**/*.md\"",
    "fix:text": "textlint --fix \"docs/**/*.md\"",
    "fix:all": "npm run build && npm run fix:md && npm run fix:text && npm run fix:frontmatter:order && npm run fix:rule-ids && npm run fix:filenames",
    "lint:all": "npm run build && npm run lint:md && npm run check:md:links && npm run check:md:frontmatter && npm run check:md:structure && npm run lint:text",
    "tsc:check": "tsc --noEmit",
    "fix:md-links": "node ./dist/scripts/fix-md-links.js",
    "update:readme:structure": "npm run build && node ./dist/scripts/update-readme-structure.js",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "gray-matter": "^4.0.3",
    "markdownlint": "^0.37.4",
    "markdownlint-cli": "^0.39.0",
    "textlint": "^13.4.1",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.1.0",
    "textlint-rule-ja-no-mixed-period": "^2.1.3",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-no-weak-phrase": "^2.0.0",
    "textlint-rule-max-comma": "^4.0.0",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-max-ten": "^5.0.0",
    "textlint-rule-no-doubled-joshi": "^5.1.0",
    "textlint-rule-no-exclamation-question-mark": "^1.1.0",
    "textlint-rule-preset-ja-technical-writing": "^9.0.0",
    "textlint-rule-sentence-length": "^5.2.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "ulidx": "^2.4.1"
  }
}
